/*商品选择   开始  */

.model {
    height: 100%;
    width: 100%;
    position: fixed;
    z-index: 99999;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.5);
}
.tel_info .close {
    position: absolute;
    right: 20rpx;
    width: 56rpx;
    height: 56rpx;
    background: #d5d5d5;
    border-radius: 50%;
    text-align: center;
    line-height: 56rpx;
    font-size: 26rpx;
    color: #ffffff;
}
.model .tel_info {
    padding-top: 41rpx;
    width: 100%;
    background: #fff;
    position: absolute;
    bottom: 0;
    left: 0;
}

/*商品样式  */

.model .tel_info .details {
    display: flex;
    padding-left: 20rpx;
}

.model .tel_info .details ul {
    margin-left: 27rpx;
    display: flex;
    flex-direction: column;
}

.model .tel_info .details ul li {
    margin-top: 20rpx;
    font-size: 24rpx;
}

.model .tel_info .details ul .price {
    margin-top: 0rpx;
}

.model .tel_info .details ul .kuchun text {
    padding-right: 20rpx;
}

.model .tel_info .details ul li text {
    font-size: 24rpx;
}

.model .tel_info .details .img image {
    width: 174rpx;
    height: 174rpx;
}

/*商品规格  */

.model .tel_info .size, .model .tel_info .tel_color {
    display: flex;
    padding-left: 20rpx;
    margin-top: 40rpx;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #dcdcdc;
}

.model .tel_info .size text, .model .tel_info .tel_color text {
    height: 57rpx;
    line-height: 57rpx;
    width: 10%;
    margin-right: 30rpx;
    color: #969696;
}
.model .tel_info .size .box,
.model .tel_info .tel_color .box{
    width: 100%;
}
.model .tel_info .size  li, .model .tel_info .tel_color  li {
    display: inline-block;
    width: 20%;
    height: 57rpx;
    border: 1rpx solid #969696;
    margin-bottom: 30rpx;
    margin-right: 20rpx;
    text-align: center;
    line-height: 57rpx;
}

.model .tel_info ul .info_active {
    color: #81d6aa;
    border:1rpx solid #81d6aa;
}

/* 商品数量 */

.model .tel_info .number {
    display: flex;
    height: 58rpx;
    line-height: 58rpx;
    padding: 39rpx 0 81rpx 20rpx;
    border-bottom: 1rpx solid #dcdcdc;
}

.model .tel_info .number> text {
    color: #969696;
    margin-right: 30rpx;
}

.model .tel_info .number .input {
    display: flex;
}

.model .tel_info .number .input text {
    font-size: 45rpx;
    font-weight: 900;
    width: 90rpx;
    background: #f6f6f6;
    text-align: center;
    border: 1rpx solid #969696;
}

.model .tel_info .number .input .input_num {
    font-size: 28rpx;
}

/*商品选择底部  */

.model .tel_info .tel_foot {
    display: flex;
    height: 98rpx;
    line-height: 98rpx;
}
.confirm{
    justify-content: center;
    background: #81d6aa;
    color: #fff;
    font-size: 36rpx;
    font-weight: 100;
}

.model .tel_info .tel_foot view {
    width: 50%;
    text-align: center;
}

.model .tel_info .tel_foot view:nth-of-type(2) {
    background: #81d6aa;
    color: #fff;
}

/*商品选择   结束  */