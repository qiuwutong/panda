@import "../../template/wxss/home_goods.wxss";
@import "../../template/wxss/goods.wxss";
.container {
    background: #f1f1f1;
}

image {
    width: 100%;
    height: 100%;
}
/* 顶部样式开始 */

.container .top {
    width: 100%;
    background: #000;
    padding: 15rpx 38rpx 15rpx 214rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
}
.top .search {
    display: flex;
    align-items: center;
    width: 496rpx;
    height: 58rpx;
    border: 1px solid #000;
    border-radius: 8rpx;
    box-sizing: border-box;
    padding-left: 21rpx;
    background: #fff;
}
.top .search text {
    margin-right: 21rpx;
    font-weight: 900;
    color: #dcdcdc;
}
.container .top input {
    font-size: 24rpx;
}

/* 顶部样式结束 */

/*轮播图样式开始  */
.swiper{
    padding-top: 88rpx;
    position: relative;
}
.swiper image {
    width: 100%;
    height: 300rpx;
}

.swiper .dots {
    position: absolute;
    display: flex;
    bottom: 40rpx;
    left: 50%;
    transform: translate(-50%);
}

.swiper .dots .dot {
    width: 12rpx;
    height: 12rpx;
    border-radius: 6rpx;
    background:rgba(225, 225,225, .8);
    margin-right: 16rpx;
}

.swiper .dots .active {
    background: #000;
}

/*轮播图样式结束  */

/* 分类样式开始 */

.classify {
    background: #fff;
    display: flex;
    padding: 20rpx 0 20rpx 36rpx;
    margin-bottom: 16rpx;
}

.classify .classify-img {
    width: 100rpx;
    text-align: center;
    margin-right: 92rpx;
}

.classify .classify-img image {
    width: 84rpx;
    height: 84rpx;
    padding-left: 8rpx;
}

.classify view:nth-of-type(4) {
    margin-right: 0rpx;
}

.classify .classify-text {
    font-size: 24rpx;
    color: #212121;
    font-weight: 900;
}

/* 分类样式结束 */


/* 新品速递 */

.newgoods {
    background: #fff;
    margin-bottom: 20rpx;
}

.newgoods .newgoods_info {
    padding-left: 20rpx;
}

.newgoods .title {
    background: #fff;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    font-weight: 900;
    color: #212121;
}

.newgoods .banner {
    margin-bottom: 40rpx;
    position: relative;
}

.newgoods .banner::after {
    content: "";
    width: 0px;
    height: 0px;
    border-width: 30rpx;
    border-style: solid;
    border-color: transparent transparent #fff transparent;
    position: absolute;
    bottom: 0;
    left: 50%;
}

.newgoods .banner image {
    width: 100%;
    height: 300rpx;
}

/*为你精选样式  开始  */

.selected {
    padding: 0 20rpx;
    background: #fff;
}

.selected .title {
    font-size: 30rpx;
    color: #212121;
    font-weight: 900;
    padding-top: 40rpx;
}

/*为你精选样式  结束  */
