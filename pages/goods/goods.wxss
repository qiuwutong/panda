/* pages/goods/goods.wxss */
@import "../../template/wxss/select.wxss";
page {
    background: #f1f1f1;
    width: 100%;
    height: 100%;
}
.layout{
    overflow: hidden;
    width: 100%;
    height: 100%;
}
view, text {
    color: #212121;
    font-weight: 600;
    font-size: 28rpx;
}

.swiper {
    background: #fff;
    position: relative;
    border-bottom: 1px solid #ccc;
}

.swiper, .swiper swiper {
    width: 100%;
    height: 690rpx;
}

swiper-item {
    display: flex;
    align-items: center;
    justify-content: center;
}

.swiper .dots {
    position: absolute;
    display: flex;
    bottom: 6%;
    left: 50%;
    transform: translate(-50%);
}

.swiper .dots .dot {
    width: 14rpx;
    height: 14rpx;
    border-radius: 7rpx;
    background: #dcdcdc;
    margin-right: 16rpx;
}

.swiper .dots .active {
    background: #fc0f4e;
}

/* 头部内容样式  开始*/

.header {
    background: #fff;
    padding: 20rpx;
}

.header .title {
    font-size: 32rpx;
    font-weight: 900；
}

.header .text {
    font-size: 26rpx;
    color: #969696;
    margin-top: 20rpx;
}

.header .price {
    font-size: 30rpx;
    margin-top: 40rpx;
}

/* 头部内容样式  结束*/

/*选择列表样式 开始  */

.select {
    margin: 20rpx 0;
    font-size: 28rpx;
    background: #fff;
}

.select>view {
    padding: 0 20rpx;
    display: flex;
    border-bottom: 1px solid #f1f1f1;
    height: 88rpx;
    justify-content: space-between;
    align-items: center;
}
.select .iconfont {
    color: #969696;
    font-size: 42rpx;
}

/*选择列表样式 结束  */


/*商品详情  */
.info{
    background: #fff;
    padding-bottom: 98rpx;
}

/*商品详情  */


/*底部导航栏样式   开始  */

.bt_nav {
    position: fixed;
    bottom: 0;
    background: #fff;
    display: flex;
    border-top: 1px solid #969696;
    height: 98rpx;
    width: 100%;
}
 .bt_nav .shoucang, .bt_nav .cart {
    display: flex;
    width: 22%;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-right: 1rpx solid #969696;
    margin: 10rpx 0;
}

.bt_nav .buy, .bt_nav .jion_cart {
    width: 27.7%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.bt_nav .buy {
    background:#81d6aa;
    color: #fff;
}

/*底部导航栏样式  结束  */

