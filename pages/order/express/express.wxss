/* pages/order/express/express.wxss */

page,.express {
    font-size: 28rpx;
    height: 100%;
}

.express .top {
    height: 152rpx;
    background: #fff;
    border-top: 1px solid #f1f1f1;
    padding-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.express .info{
    margin-top: 20rpx;
    background: #fff;
    height: 100%;
}
.express .info > view ul:nth-of-type(1) .dian{
    background: #81d6aa;
    z-index: 99;
}
.express .info > view ul:last-of-type  .xian{
    display: none;
}
.express .info > view ul:nth-of-type(1) .list_title{
    color: #81d6aa;
}
.express .info .info_title{
    padding: 42rpx 0 32rpx 20rpx;
}
.express .info .list{
    display: flex;
    flex-direction: column;
    padding-left: 78rpx;
    position: relative;
    padding-bottom: 61rpx;
    padding-right: 20rpx;
}
.express .info .list .list_title{
    margin-bottom: 14rpx;
}
.express .info .list .dian {
    position: absolute;
    width: 18rpx;
    height: 18rpx;
    background: #969696;
    border-radius: 50%;
    left: 40rpx;
    top: 10rpx;
}
.express .info .list .xian{
    position: absolute;
    width: 1rpx;
    height: 100%;
    background: #969696;
    top: 18rpx;
    left: 49rpx;
}